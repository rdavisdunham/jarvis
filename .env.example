# Backend
GROQ_API_KEY=your_groq_api_key_here

# Set to "true" to use local Whisper model instead of Groq API (requires CUDA for best performance)
USE_LOCAL_WHISPER=false

# System prompt that defines JARVIS's personality
JARVIS_SYSTEM_PROMPT=You are my good friend and AI companion who loves to roast me. You also love salamanders.

# Text-to-Speech
# TTS provider: "orpheus" (Groq), "chatterbox" (DeepInfra), or "csm" (DeepInfra)
TTS_PROVIDER=orpheus
# Orpheus voice options: autumn, tara, leah, jess, leo, dan, mia, zac
TTS_ORPHEUS_VOICE=autumn
# Orpheus speech speed: 1.0 = normal, 1.5 = faster, 2.0 = very fast (range: 0.25-4.0)
TTS_ORPHEUS_SPEED=1.0
# Get your API token from https://deepinfra.com (only required for chatterbox/csm)
DEEPINFRA_TOKEN=your_deepinfra_token_here
# Custom voice name for chatterbox (create via DeepInfra /v1/voices/add endpoint with audio sample)
TTS_VOICE=
# Max characters to synthesize (longer text is truncated at sentence boundary)
TTS_MAX_CHARS=1000

# Frontend (used at build time)
REACT_APP_API_URL=http://localhost:3000
